{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./app",
        "types": [
            "node"
        ],
        "typeRoots": [ "./node_modules/@types" ],
        "strictNullChecks": false,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": [
        "app/**/*.ts",
        "app/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "app/tests"
    ]
}